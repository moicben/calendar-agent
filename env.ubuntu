# Configuration pour Ubuntu VM
# Copiez ce fichier vers .env sur votre VM Ubuntu

# Clé OpenAI (requise par browser-use/ChatOpenAI)
OPENAI_API_KEY=votre_clé_openai_ici

# Chemin Chrome pour Ubuntu VM
CHROME_PATH=/usr/bin/google-chrome

# Dossier de profil chrome persistant
BROWSERUSE_USER_DATA_DIR=./browseruse-profile

# Exécution headless par défaut (false pour voir le navigateur)
BROWSERUSE_HEADLESS=false

# Active DevTools (activé si headless=false)
BROWSERUSE_DEVTOOLS=true

# Modèle LLM valide
BROWSERUSE_MODEL=gpt-4o-mini

# Réseau/serveur
HOST=0.0.0.0
PORT=8080

# Uvicorn auto-reload (false en prod)
UVICORN_RELOAD=false

# Serper.dev API key (pour scraper.py)
SERPER_API_KEY=
